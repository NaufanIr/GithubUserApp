<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubUserApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_900</item>
        <item name="colorPrimaryVariant">@color/indigo_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/white</item>
        <item name="colorOutline">@color/indigo_900</item>
        <item name="civ_border_color">@color/grey_overlay</item>
        <item name="icon">@drawable/ic_dark_mode</item>
    </style>

    <!--STYLE UNTUK COVER IMAGE-->
    <style name="CoverImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:contentDescription">@string/bg_cover</item>
        <item name="android:src">@drawable/bg_cover_light</item>
    </style>

    <!--STYLE UNTUK TAB BAR-->

    <style name="TabBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/background</item>
        <item name="tabSelectedTextColor">@color/indigo_900</item>
        <item name="tabIndicatorColor">@color/indigo_900</item>
    </style>

    <!--STYLE UNTUK TEXT PADA HALAMAN LIST USER GITHUB (HOME SCREEN)-->

    <style name="TextForlistItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextForlistItem.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginTop">15dp</item>

    </style><style name="TextForlistItem.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!--STYLE UNTUK TEXT PADA HALAMAN LIST USER GITHUB (HOME SCREEN)-->

    <style name="TextForDetailItem_Statistic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextForDetailItem_Statistic.Counter">
        <item name="android:textSize">23sp</item>
    </style>

    <style name="TextForDetailItem_Statistic.Desc">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextForDetailItem_Info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Theme.GitHubUserApp.Fullscreen" parent="Theme.GitHubUserApp">
        <item name="android:actionBarStyle">@style/Widget.Theme.GitHubUserApp.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.GitHubUserApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>