<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.githubuserapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubUserApp">
        <activity
            android:name=".user_fav_screen.UserFavoriteActivity"
            android:exported="false"
            android:label="@string/activity_favorite_user_title"/>
        <activity
            android:name=".user_detail_screen.UserDetailActivity"
            android:exported="false"
            android:label="@string/activity_user_details_title"/>
        <activity
            android:name=".home_screen.MainActivity"
            android:exported="false"
            android:label="@string/home_screen_title"/>
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            tools:ignore="DuplicateActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>